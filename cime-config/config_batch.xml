<?xml version="1.0" encoding="utf-8"?>
<config_batch version="2.0">
  <batch_system MACH="ls6" type="slurm">
    <batch_submit>sbatch</batch_submit>
    <submit_args>
      <arg flag="--time" name="$JOB_WALLCLOCK_TIME"/>
      <arg flag="-p" name="$JOB_QUEUE"/>
      <arg flag="--account" name="$PROJECT"/>
    </submit_args>
    <queues>
      <queue walltimemax="48:00:00" nodemin="1" nodemax="512" default="true">normal</queue>
      <queue walltimemax="02:00:00" nodemin="1" nodemax="40">development</queue>
      <queue walltimemax="24:00:00" nodemin="1" nodemax="128">large</queue>
    </queues>
  </batch_system>
</config_batch>